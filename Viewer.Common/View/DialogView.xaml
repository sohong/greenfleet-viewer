<Window x:Class="Viewer.Common.View.DialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dialog" Height="263" Width="561" WindowStartupLocation="CenterScreen" ShowInTaskbar="False" WindowStyle="SingleBorderWindow" ResizeMode="CanResizeWithGrip" PreviewKeyDown="Window_PreviewKeyDown">
    <Grid Margin="6">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Name="grdContent">
        </Grid>
        <StackPanel Name="panButton" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,10">
            <Button Name="btnOK" MinWidth="80" Margin="3,3,3,0" Click="btnOK_Click">OK</Button>
            <Button Name="btnCancel" MinWidth="80" Margin="3,3,0,0" IsCancel="True" Click="btnCancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
